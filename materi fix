$db->insert('users', [
    'name' => 'John Doe',
    'email' => 'john@example.com',
    'password' => hashPassword('password123')
]);

// Get data
$user = $db->fetchOne("SELECT * FROM users WHERE email = 'john@example.com'");
3. Authentication
// Login user
$user = authenticateUser('admin@situneo.my.id', 'password');
if ($user) {
    loginUser($user);
    redirect('dashboard');
}
4. Validation
$validation = validateInput($_POST, [
    'name' => 'required|min:3',
    'email' => 'required|email',
    'phone' => 'required|phone'
]);

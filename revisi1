// ============================================
// HELPER FUNCTIONS
// ============================================

/**
 * Get tier by ID
 */
function getTierById($tier_id) {
    $tiers = getTierConfig();
    return isset($tiers[$tier_id]) ? $tiers[$tier_id] : null;
}

/**
 * Get commission rate by tier ID
 */
function getCommissionRate($tier_id) {
    $tier = getTierById($tier_id);
    return $tier ? $tier['commission'] : 0;
}

/**
 * Check tier berdasarkan jumlah orders bulan ini
 * 
 * @param int $current_tier Current tier ID
 * @param int $orders_this_month Total orders dalam bulan berjalan
 * @return array ['new_tier' => int, 'upgraded' => bool, 'downgraded' => bool]
 */
function checkTierUpdate($current_tier, $orders_this_month) {
    $tiers = getTierConfig();
    $current_config = $tiers[$current_tier];
    
    $result = [
        'new_tier' => $current_tier,
        'upgraded' => false,
        'downgraded' => false,
        'message' => ''
    ];
    
    // Check UPGRADE
    if ($current_config['upgrade_at'] !== null && $orders_this_month >= $current_config['upgrade_at']) {
        $new_tier = $current_tier + 1;
        if (isset($tiers[$new_tier])) {
            $result['new_tier'] = $new_tier;
            $result['upgraded'] = true;
            $result['message'] = "Selamat! Tier naik ke {$tiers[$new_tier]['name']} ({$tiers[$new_tier]['commission']}%)";
        }
    }
    // Check DOWNGRADE
    else if ($current_config['downgrade_at'] !== null && $orders_this_month < $current_config['downgrade_at']) {
        $new_tier = $current_tier - 1;
        if (isset($tiers[$new_tier])) {
            $result['new_tier'] = $new_tier;
            $result['downgraded'] = true;
            $result['message'] = "Tier turun ke {$tiers[$new_tier]['name']} ({$tiers[$new_tier]['commission']}%). Target tidak tercapai.";
        }
    }
    // MAINTAIN
    else {
        $result['message'] = "Maintain tier {$current_config['name']} ({$current_config['commission']}%)";
    }
    
    return $result;
}

/**
 * Calculate commission amount
 * 
 * @param float $order_value Order value
 * @param int $tier_id Tier ID
 * @return float Commission amount
 */
function calculateCommission($order_value, $tier_id) {
    $commission_rate = getCommissionRate($tier_id);
    return ($order_value * $commission_rate) / 100;
}


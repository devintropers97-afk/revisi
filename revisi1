define('TIER_MAX_UPGRADE_AT', null);    // Sudah tier tertinggi
define('TIER_MAX_DOWNGRADE_AT', 75);    // Turun ke Tier 3 jika < 75 orders
define('TIER_MAX_ICON', '👑');
